{
	"compilerOptions": {
		"allowJs": false,
		"alwaysStrict": true,
		"baseUrl": "src",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNEXT",
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true,
		"target": "ES6",
	},
	"include": [
		"./src",
	]
}